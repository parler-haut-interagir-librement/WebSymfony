{
    "name": "phil/websymfony",
    "description": "A template to initialize an web application to using Symfony",
    "license": "MIT",
    "type": "symfony-application-template",
    "keywords": [
        "php",
        "poc",
        "project-template",
        "rad",
        "symfony",
        "web-application"
    ],
    "homepage": "https://ph-il.ca",
    "authors": [
        {
            "name": "Philippe Gamache",
            "email": "philippe@ph-il.ca"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-simplexml": "*",
        "ext-xml": "*",
        "doctrine/doctrine-bundle": "*",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^2.16",
        "knplabs/knp-menu-bundle": "^3.2",
        "league/commonmark": "^2.4",
        "stof/doctrine-extensions-bundle": "^1.8",
        "symfony/asset": "6.3.*",
        "symfony/asset-mapper": "6.3.*",
        "symfony/console": "6.3.*",
        "symfony/dotenv": "6.3.*",
        "symfony/flex": "^2.3",
        "symfony/form": "6.3.*",
        "symfony/framework-bundle": "6.3.*",
        "symfony/intl": "6.3.*",
        "symfony/monolog-bundle": "^3.8",
        "symfony/runtime": "6.3.*",
        "symfony/stimulus-bundle": "^2.11",
        "symfony/translation": "6.3.*",
        "symfony/twig-bundle": "6.3.*",
        "symfony/validator": "6.3.*",
        "symfony/web-link": "6.3.*",
        "symfony/yaml": "6.3.*",
        "twig/extra-bundle": "^3.7",
        "twig/markdown-extra": "^3.7",
        "twig/twig": "^3.7"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "friendsofphp/php-cs-fixer": "^3.26",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpdoc-parser": "^1.24",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpstan/phpstan-symfony": "^1.3",
        "phpunit/phpunit": "^9.6",
        "rector/rector": "^0.18",
        "roave/security-advisories": "dev-latest",
        "symfony/browser-kit": "6.3.*",
        "symfony/css-selector": "6.3.*",
        "symfony/debug-bundle": "6.3.*",
        "symfony/maker-bundle": "^1.50",
        "symfony/phpunit-bridge": "6.3.*",
        "symfony/stopwatch": "6.3.*",
        "symfony/web-profiler-bundle": "6.3.*"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "minimum-stability": "beta",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "6.3.*",
            "docker": false
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "app:test": [
            "vendor/bin/simple-phpunit"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "asset-map:compile": "symfony-cmd"
        }
    },
    "scripts-descriptions": {
        "app:test": "Run all PHPUnit tests"
    }
}
